<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/default_photo" />

    <Button
        android:id="@+id/change_photo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="change your photo" />

    <TextView
        android:id="@+id/emailadrress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photo"
        android:layout_below="@+id/photo"
        android:layout_marginTop="21dp"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/Last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/First"
        android:layout_alignBottom="@+id/First"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/email_usr"
        android:text="Last"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/emailadrress"
        android:layout_below="@+id/email_usr"
        android:layout_marginTop="97dp"
        android:text="First"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editLast"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Last"
        android:layout_toRightOf="@+id/email_usr"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editFirst"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_usr"
        android:layout_below="@+id/First"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editFirst"
        android:layout_below="@+id/editFirst"
        android:text="Phone number"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/username_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_usr"
        android:layout_below="@+id/email_usr"
        android:layout_marginTop="18dp"
        android:text="Username" />

    <TextView
        android:id="@+id/email_usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailadrress"
        android:layout_below="@+id/emailadrress"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone"
        android:layout_below="@+id/phone"
        android:ems="10"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/save"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/change_photo"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="20dp"
        android:text="Save" />

    <TextView
        android:id="@+id/username_usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_info"
        android:layout_below="@+id/username_info"
        android:gravity="left"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>